FireFragment is ElementalFragment

constants:

   include blakston.khd

resources:

   fire_fragment_name_rsc = "fire fragment"
   fire_fragment_icon_rsc = angledfragment.bgf
   fire_fragment_desc_rsc = \
      "This fragment of crystal holds solidified elemental essence that seems "
      "to have come from a plane of pure fire."

   fire_fragment_name_plural_rsc = "fire fragments"

classvars:

   vrName = fire_fragment_name_rsc
   vrIcon = fire_fragment_icon_rsc
   vrDesc = fire_fragment_desc_rsc

   vrName_plural = fire_fragment_name_plural_rsc

   viValue_average = 70
   viBulk = 5
   viWeight = 2

   viFragmentColor = 77

properties:

   piNumber = 1

messages:

   GetForgeType()
   {
      return FORGE_FIRE;
   }

end
