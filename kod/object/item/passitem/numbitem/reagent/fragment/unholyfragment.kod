UnholyFragment is ElementalFragment

constants:

   include blakston.khd

resources:

   unholy_fragment_name_rsc = "unholy fragment"
   unholy_fragment_icon_rsc = instillingshard.bgf
   unholy_fragment_desc_rsc = \
      "This fragment of crystal holds solidified elemental essence that seems "
      "to have come from a plane of pure unholiness."

   unholy_fragment_name_plural_rsc = "unholy fragments"

classvars:

   vrName = unholy_fragment_name_rsc
   vrIcon = unholy_fragment_icon_rsc
   vrDesc = unholy_fragment_desc_rsc

   vrName_plural = unholy_fragment_name_plural_rsc

   viValue_average = 1100
   viBulk = 5
   viWeight = 2

   viFragmentColor = 81

properties:

   piNumber = 1

messages:

   GetForgeType()
   {
      return FORGE_UNHOLY;
   }

end
