AcidFragment is ElementalFragment

constants:

   include blakston.khd

resources:

   acid_fragment_name_rsc = "acid fragment"
   acid_fragment_icon_rsc = instillingshard.bgf
   acid_fragment_desc_rsc = \
      "This fragment of crystal holds solidified elemental essence that seems "
      "to have come from a plane of pure acid."

   acid_fragment_name_plural_rsc = "acid fragments"

classvars:

   vrName = acid_fragment_name_rsc
   vrIcon = acid_fragment_icon_rsc
   vrDesc = acid_fragment_desc_rsc

   vrName_plural = acid_fragment_name_plural_rsc

   viValue_average = 70
   viBulk = 5
   viWeight = 2

   viFragmentColor = 79

properties:

   piNumber = 1

messages:

   GetForgeType()
   {
      return FORGE_ACID;
   }

end
