MagicBow is Bow

constants:

   include blakston.khd

resources:

   include magicbow.lkod

   MagicBow_name_rsc = "magic bow"
   MagicBow_desc_rsc = \
      "Crafted by the gods, this bow hums with magical power."

classvars:

   vrName = MagicBow_name_rsc
   vrDesc = MagicBow_desc_rsc

   viValue_average = 3000
   viBulk = 70
   viWeight = 70
   
   % Chance to apply knockbacks, stuns, and bleeds
   viCriticalHitRate = 200
   vbCanStun = TRUE
   vbCanBleed = TRUE

properties:

   viWeaponDamage = 1
   viRange = 40 * FINENESS
   viHit_roll_modifier = 100

   % What's the basic color of the wood?
   viBaseXLAT = XLAT_TO_SKIN4

   piAttack_Type = ATCK_WEAP_MAGIC+ATCK_WEAP_PIERCE

messages:

   SetColor(iColor=XLAT_TO_SKIN4)
   {
      viBaseXLAT = iColor;
      send(self,@UpdateColor);

      return;
   }

   GetPrefixes()
   {
      return [[&RangedOffenseMod,100],
              [&MagicalSlayerMod,100],
              [&IndestructibleMod,500],
              [&PierceEmpowermentMod,100],
              [&WeaponEmpowermentMod,1]];
   }
   
   GetSlayerModifiers()
   {
      return [[CREATURE_TYPE_MAGICAL, 10]];
   }

end
