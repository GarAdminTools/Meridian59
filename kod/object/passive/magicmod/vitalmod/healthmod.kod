HealthMod is MagicMod

constants:

   include blakston.khd

resources:

classvars:

   viModType = MOD_SUFFIX
   viModGroup = GROUP_HEALTH

   viModRangeMin = 1
   viModRangeMax = 3
   
   viPowerDivisor = 50

properties:

messages:

   NewUsed(who=$,iState=0)
   {
      Send(who,@GainMaxHealth,#amount=iState);

      return;
   }

   NewUnused(who=$,iState=0)
   {
      Send(who,@GainMaxHealth,#amount=-iState);

      return;
   }

end
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
