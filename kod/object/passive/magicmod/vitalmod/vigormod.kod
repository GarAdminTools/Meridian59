VigorMod is MagicMod

constants:

   include blakston.khd

resources:

   vigor_mod_name = "vigor"

classvars:

   viModName = vigor_mod_name
   viModType = MOD_PREFIX
   viModGroup = GROUP_VIGOR

   viModRangeMin = 1
   viModRangeMax = 15
   
   viPowerDivisor = 10

properties:

messages:

   NewUsed(who=$,iState=0)
   {
      Send(who,@SetVigorRestThreshold);
      return;
   }

   NewUnused(who=$,iState=0)
   {
      Send(who,@SetVigorRestThreshold);
      return;
   }

end
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
