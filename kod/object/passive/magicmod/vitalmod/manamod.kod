ManaMod is MagicMod

constants:

   include blakston.khd

resources:

classvars:

   viModType = MOD_PREFIX
   viModGroup = GROUP_MANA

   viModRangeMin = 1
   viModRangeMax = 10
   
   viPowerDivisor = 15

properties:

messages:

   NewUsed(who=$,iState=0)
   {
      Post(who,@ComputeMaxMana);

      return;
   }

   NewUnused(who=$,iState=0)
   {
      Post(who,@ComputeMaxMana);

      return;
   }

end
