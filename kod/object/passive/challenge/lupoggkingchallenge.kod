LupoggKingChallenge is LadderChallenge

constants:

   include blakston.khd

resources:

   kill_lupogg_kings_challenge_name = "Slay 40 lupogg kings"
   kill_lupogg_kings_challenge_icon = lupking.bgf
   kill_lupogg_kings_challenge_desc = \
      "Slay 40 lupogg kings: %s"
      "\n\nLupogg kings slain: %i"

classvars:

   vrName = kill_lupogg_kings_challenge_name
   vrIcon = kill_lupogg_kings_challenge_icon
   vrDesc = kill_lupogg_kings_challenge_desc
   
   viChallengeNum = SLAY_LUPOGG_KINGS

properties:


messages:

   ShowDesc(who=$)
   {
      local lChallengeData, lData, rOne, rTwo, rThree, rFour, rFive, rSix, rSeven, rEight, rNine;

      lChallengeData = Send(who,@GetLadderChallengeData);
      
      lData = Nth(lChallengeData,SLAY_LUPOGG_KINGS);
      
      if lData <> $
         AND Nth(lData,1)
      {
         rOne = Send(self,@GetCompletedChallengeRsc);
      }
      else
      {
         rOne = Send(self,@GetNotCompletedChallengeRsc);
      }

      AddPacket(4,vrDesc, 4,rOne, 4, Nth(lData,2));
      return;
   }

   GetCompleted(who=$)
   {
      local lChallengeData, lData;

      lChallengeData = Send(who,@GetLadderChallengeData);
      
      lData = Nth(lChallengeData,SLAY_LUPOGG_KINGS);

      if lData <> $
         AND Nth(lData,1)
      {
         return TRUE;
      }
      
      return FALSE;
   }

end
