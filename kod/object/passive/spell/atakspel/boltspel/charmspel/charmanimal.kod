CharmAnimal is CharmSpell

constants:

   include blakston.khd

resources:

   CharmAnimal_name_rsc = "charm animal"

   CharmAnimal_icon_rsc = charmprojectile.bgf

   CharmAnimal_desc_rsc = \
      "Attempts to alter the behaviors of an animal creature to make it  "
      "follow you and fight for you. If you are a student of nature "
      "and know how to focus your mana, this spell can be made more effective. "
      "Requires red mushrooms and elderberries to cast."

   CharmAnimal_sound = rdement.wav

   CharmAnimal_projectile_icon_rsc = charmprojectile.bgf

classvars:

   vrName = CharmAnimal_name_rsc
   vrIcon = CharmAnimal_icon_rsc
   vrDesc = CharmAnimal_desc_rsc
   
   viSpell_num = SID_CHARM_ANIMAL

   viAttack_spell = ATCK_SPELL_ALL + ATCK_SPELL_CHARM
   viCharmedType = CREATURE_TYPE_ANIMAL

   viSpell_level = 2
   viMana = 8

   vrSucceed_wav = CharmAnimal_sound

   % In seconds, since it works off GetTime().
   viPostCast_time = 2

   viChance_To_Increase = 15

   vrProjectile_Icon = CharmAnimal_projectile_icon_rsc

   % Short range blast
   vbIsRangedAttack = FALSE

   % Projectile lighting information.
   viProjectileLightFlags = LIGHT_FLAG_ON | LIGHT_FLAG_DYNAMIC
   % Medium light range, out of 255.
   viProjectileLightIntensity = 100
   % Default color is lightning.
   viProjectileLightColor = LIGHT_RED
   
   viProjectileSpeed = 10

properties:

   piDamageMin = 3
   piDamageMax = 7
   piRange = 4 * FINENESS

   % Maximum amount of bonus damage mana focus gives us for casting this spell.
   piManaFocusBonus = 5
   
   piExtraCharmMultiple = 1

messages:

   ResetReagents()
   {
      % separate message so can change, then set from admin mode

      plReagents = $;
      plReagents = Cons([&RedMushroom,2],plReagents);
      plReagents = Cons([&Elderberry,1],plReagents);
 
      return;
   }

   SendLookAnimation()
   {
      AddPacket(1,ANIMATE_NONE, 2,2);

      return;
   }

   SendProjectileAnimation()
   {
      % 40ms between animations, between frames 1-6
      AddPacket(1,ANIMATE_CYCLE, 4,40, 2,1, 2,6);   

      return;
   }

end
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
