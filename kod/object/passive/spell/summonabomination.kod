SummonAbomination is Spell

constants:
   include blakston.khd

resources:


   summon_abomination_name_rsc = "summon abomination"
   summon_abomination_icon_rsc = iseance.bgf
   summon_abomination_desc_rsc = \
      "Summons a cosmic horror from the vast unknown spaces between "
      "Meridians to fight under your command. There is no telling "
      "what such an abomination may look like. All that is known is that the caster of "
      "such forbidden magics will always be disappointed, for the void "
      "is a place where hope goes to die. Requires herbs to cast."

   summon_abomination_failed_rsc = \
      "There is too much summoning magic focused here to summon an abomination."
   
   summon_abomination_limit_rsc = \
      "You are already maintaining the maximum number of minions."
   abomination_failed_full_rsc = \
      "This place is too full of monsters. "

   summon_abomination_too_many_rsc = \
      "You don't have enough willpower to control a new minion right now."

   abomination_cannot_cast_here = \
      "You are not allowed to summon an abomination here."

   summon_abomination_cast_rsc = "An abomination roars its way out of the void!"

   summon_abomination_sound = rmirrimg.wav

classvars:

   vrName = summon_abomination_name_rsc
   vrIcon = summon_abomination_icon_rsc
   vrDesc = summon_abomination_desc_rsc

   viSpell_num = SID_SUMMON_ABOMINATION
   viSchool = SS_BESTIARY
   viSpell_level = 1
   viMana = 8
   viMeditate_ratio = 20

   viSpellExertion = 4
   viCast_time = 0

   vrSucceed_wav = summon_abomination_sound
   
   viPrimaryStat = STAT_ID_INTELLECT
   viSecondaryStat = 0

properties:

messages:

   ResetReagents()
   {
      plReagents = $;
      plReagents = Cons([&Herbs,2], plReagents);

      return;
   }

   CanPayCosts(who=$)
   {
      local oRoom;

      oRoom = Send(who,@GetOwner);
      
      if oRoom = $
         OR NOT IsClass(oRoom,&Room)
      {
         return FALSE;
      }

      if (Send(oRoom,@CountHoldingHowMany,#class=&monster) > 55)
         AND NOT IsClass(oRoom,&SurvivalRoom)
      {
         Send(who,@MsgSendUser,#message_rsc=abomination_failed_full_rsc);

         return FALSE;
      }

      propagate;
   }

   GetNumSpellTargets()
   {
      return 0;
   }

   CastSpell(who=$,lTargets=$,iSpellPower=1)
   {
      local oRisen, oRoom, iRow, iCol, iFine_Row, iFine_Col, iNum;

      oRoom = Send(who,@GetOwner);

      iRow = Send(who,@GetRow);
      iCol = Send(who,@GetCol);
      iFine_Row = Send(who,@GetFineRow);
      iFine_Col = Send(who,@GetFineCol);

      iNum = Random(1,99);

      if iNum < 20
      {
         oRisen = Create(&Bunny);
      }
      else
      {
         if iNum < 40
         {
            oRisen = Create(&Bunny);
         }
         else
         {
            if iNum < 60
            {
               oRisen = Create(&Bunny);
            }
            else
            {
               if iNum < 75
               {
                  oRisen = Create(&Bunny);
               }
               else
               {
                  if iNum < 90
                  {
                     oRisen = Create(&KillerBunny);
                  }
                  else
                  {
                     oRisen = Create(&Bunny);
                     
                  }
               }
            }
         }
      }
      
      Send(oRisen,@SetSummoned,#value=TRUE);

      if Send(who,@CanControlNewMinion,#oMonster=oRisen,#iHypotheticalHitPoints=20,#bCharming=FALSE)
      {
         % Add this creature to your minion list
         Send(who,@NewControlledMinion,#minion=oRisen);

         % Set initial minion behavior
         Send(oRisen,@ResetBehaviorFlags);
         Send(self,@ModifyMonsterBehavior,#mob=oRisen);

         % Post this due to it needing to be done after the minion is placed.
         Post(oRisen,@SetMaster,#oMaster=who);
      }
      else
      {
         Send(who,@MsgSendUser,#message_rsc=summon_abomination_too_many_rsc);
         Post(oRisen,@Delete);
      }

      % Place the minion
      Send(oRoom,@NewHold,#what=oRisen,#new_row=iRow,#new_col=iCol,
            #fine_row=iFine_Row,#fine_col=iFine_Col);

      propagate;
   }

   ModifyMonsterBehavior(mob=$)
   {
      Send(mob,@SetBehaviorFlag,#flag=AI_MOVE_FOLLOW_MASTER,#value=TRUE);
      Send(mob,@SetBehaviorFlag,#flag=AI_FIGHT_AGGRESSIVE,#value=FALSE);
      Send(mob,@SetBehaviorFlag,#flag=AI_FIGHT_NEWBIESAFE);
      Send(mob,@SetBehaviorFlag,#flag=AI_FIGHT_MONSTERS);

      return;
   }

end
